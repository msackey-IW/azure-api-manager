{
  "openapi": "3.0.1",
  "info": {
    "title": "eCommerce Service",
    "description": "An API that allows users create and review products",
    "version": "v1.0"
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "Generated server url"
    }
  ],
  "tags": [
    {
      "name": "User Controller",
      "description": "Create Users who can access the eCommerce API."
    },
    {
      "name": "Category Controller",
      "description": "Create categories and associate them with products."
    },
    {
      "name": "Product Controller",
      "description": "Create products and write reviews for them."
    }
